@model EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
}


<div class="row" style="justify-content:center">
    <div class="col-md-6">
        <h1>@ViewData["Title"]</h1>
        <form id="registerForm" method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <hr />
            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" aria-required="true" placeholder="" maxlength="100" />
                <label asp-for="FirstName">FirstName</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" aria-required="true" placeholder="" maxlength="100" />
                <label asp-for="LastName">LastName</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" autocomplete="username" aria-required="true" placeholder="" />
                <label asp-for="Username">User Name</label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Roles">Roles</label><hr />
                @for (int i = 0; i < @Model.Roles.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="Roles[i].RoleId" />
                        <input type="hidden" asp-for="Roles[i].RoleName" />

                        <input class="form-check-input" asp-for="Roles[i].IsSelected" />
                        <label class="form-check-label" asp-for="Roles[i].IsSelected">
                            @Model.Roles[i].RoleName
                        </label>
                    </div>
                }
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
